{% set route_name = app.request.attributes.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href={{ path('home') }}>The Simple Bar/beers</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link {% if route_name is defined and route_name == 'home' %} active {% endif %}" href="{{ path('home') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if route_name is defined and route_name == 'bar' %} active {% endif %}" href="{{ path('bar') }}">The bar<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if route_name is defined and route_name == 'beers' %} active {% endif %}" href="{{ path('beers') }}">The beers</a>
            </li>
        </ul>
    </div>
</nav>